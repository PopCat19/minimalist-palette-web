{
  "name": "minimalist-palette-web",
  "version": "1.0.0",
  "description": "A minimalist color palette web application with Rose Pine theme using Tailwind CSS 4",
  "main": "index.html",
  "scripts": {
    "dev": "tailwindcss --input styles.css --output dist/styles.css --watch",
    "build": "tailwindcss --input styles.css --output dist/styles.css --minify",
    "serve": "python3 -m http.server 8000",
    "start": "npm run build && npm run serve"
  },
  "keywords": [
    "color-palette",
    "tailwindcss",
    "rose-pine",
    "design-tools"
  ],
  "author": "PopCat19",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=16.0.0"
  }
}
